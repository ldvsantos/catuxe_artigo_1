@article{ WOS:000284440600006,
Author = {Gaiser, Thomas and Judex, Michael and Hiepe, Claudia and Kuhn, Arnim},
Title = {Regional simulation of maize production in tropical savanna fallow
   systems as affected by fallow availability},
