@article{ WOS:000306749700001,
Author = {Santillan, Jojene and Makinano, Meriam and Paringit, Enrico},
Title = {Integrated Landsat Image Analysis and Hydrologic Modeling to Detect
   Impacts of 25-Year Land-Cover Change on Surface Runoff in a Philippine
   Watershed},
