@article{ WOS:000702574000002,
Author = {Biaou, Severin and Gouwakinnou, Gerard Nounagnon and Biaou, Honore
   Samadori Sorotori and Tovihessi, Marc Sewanou and Awessou, Beranger
   Kohomlan and Ahononga, Fiacre Codjo and Houeto, Felix Ogoubiyi},
Title = {Identifying the land use and land cover change drivers: methods and case
   studies of two forest reserves in Northern Benin},
Journal = {ENVIRONMENT DEVELOPMENT AND SUSTAINABILITY},
Year = {2022},
Volume = {24},
